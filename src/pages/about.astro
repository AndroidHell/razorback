---
import Containter from "../components/Container.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import PageBanner from "../components/PageBanner.astro";
import AboutBody from "../components/AboutBody.astro";
import SectionBreak from "../components/SectionBreak.astro";
import CtaBanner from "../components/CtaBanner.astro";

const title = "About Us";
const desc = "";
const image = "/page-banner-image.webp";
---

<BaseLayout title="About Us" description="About Us">
  <PageBanner title={title} desc={desc} image={image} />
  <Containter>
    <SectionBreak
      backgroundColor="bg-primary-600"
      stripeColor="bg-accent-400"
      textColor="text-white"
      text="RZBK"
    />
    <AboutBody />
  </Containter>

  <CtaBanner />
</BaseLayout>
