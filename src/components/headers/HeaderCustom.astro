<nav class="start-0 top-0 z-40 -mb-28 w-full bg-transparent">
  <div
    class="mx-auto my-4 flex flex-wrap items-center justify-between p-2 px-6"
  >
    <!-- brand -->
    <div class="ml-8 mt-6 lg:order-1 lg:flex lg:w-auto">
      <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
        <div>
          <svg
            class="h-10 w-10 text-white dark:text-gray-200"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M20.337 3.664c.213.212.354.486.404.782.294 1.711.657 5.195-.906 6.76-1.77 1.768-8.485 5.517-10.611 6.683a.987.987 0 0 1-1.176-.173l-.882-.88-.877-.884a.988.988 0 0 1-.173-1.177c1.165-2.126 4.913-8.841 6.682-10.611 1.562-1.563 5.046-1.198 6.757-.904.296.05.57.191.782.404ZM5.407 7.576l4-.341-2.69 4.48-2.857-.334a.996.996 0 0 1-.565-1.694l2.112-2.111Zm11.357 7.02-.34 4-2.111 2.113a.996.996 0 0 1-1.69-.565l-.422-2.807 4.563-2.74Zm.84-6.21a1.99 1.99 0 1 1-3.98 0 1.99 1.99 0 0 1 3.98 0Z"
            ></path>
          </svg>
        </div>
        <span
          class="logo self-center whitespace-nowrap text-3xl font-semibold text-white dark:text-gray-200"
          >{brand.company.name}</span
        >
      </a>
    </div>
    <div class="fixed right-0 mr-10 mt-6 flex space-x-3 lg:order-3">
      <!-- hamburger button -->
      <button
        type="button"
        class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-primary-600 p-2 text-sm text-white shadow-[0_10px_25px_rgba(0,0,0,0.3)] hover:bg-primary-700 dark:bg-gray-700 dark:text-gray-200 dark:hover:bg-gray-800"
        data-drawer-target="drawer-navigation-right"
        data-drawer-show="drawer-navigation-right"
        aria-controls="drawer-navigation-right"
        data-drawer-placement="right"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-8 w-8"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
    </div>
  </div>
</nav>
