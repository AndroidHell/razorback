---
import { navigationItems as navItems } from "../navigationItems";
---

<div
  id="drawer-navigation-right"
  class="fixed right-0 top-0 z-50 h-screen w-full translate-x-full overflow-y-auto bg-primary-500 p-0 transition-transform dark:bg-gray-800 md:w-2/3 lg:w-1/2"
  tabindex="-1"
  aria-labelledby="drawer-navigation-label"
>
  <h5
    id="drawer-navigation-label"
    class="w-full bg-primary-500 p-8 pl-10 text-6xl font-semibold uppercase text-white dark:bg-gray-800 dark:text-gray-200"
  >
    RZBK
  </h5>
  <button
    type="button"
    data-drawer-hide="drawer-navigation-right"
    aria-controls="drawer-navigation-right"
    class="absolute end-3 top-7 inline-flex h-16 w-16 items-center justify-center rounded-full bg-transparent text-sm text-white hover:bg-white hover:text-primary-600 dark:text-gray-200 dark:hover:bg-gray-600 dark:hover:text-white"
  >
    <svg
      class="h-8 w-8"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 14 14"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"></path>
    </svg>
    <span class="sr-only">Close menu</span>
  </button>

  <div class="overflow-y-auto p-4 py-4">
    <ul class="space-y-2 font-semibold">
      <!-- dropdown -->
      {
        navItems.map((item) => (
          <>
            {item.children && (
              <li>
                <button
                  type="button"
                  class="group flex w-full items-center rounded-lg p-4 text-white transition duration-75 hover:bg-white hover:text-primary-500 dark:text-white dark:hover:bg-gray-700"
                  aria-controls="dropdown-drawer"
                  data-collapse-toggle="dropdown-drawer"
                >
                  <span class="ms-3 flex-1 whitespace-nowrap text-left text-5xl lowercase rtl:text-right">
                    {item.title}
                  </span>
                  <svg
                    class="h-8 w-8"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 10 6"
                  >
                    <path
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="m1 1 4 4 4-4"
                    />
                  </svg>
                </button>
                <ul id="dropdown-drawer" class="hidden space-y-2 py-2">
                  {item.children.map((child) => (
                    <li>
                      <a
                        href={child.path}
                        class="group flex w-full items-center rounded-lg p-4 pl-11 text-5xl lowercase text-gray-200 transition duration-75 hover:bg-gray-100 hover:text-primary-400 dark:text-gray-400 dark:hover:bg-gray-700"
                      >
                        <span>{child.title}</span>
                      </a>
                    </li>
                  ))}
                </ul>
              </li>
            )}
            {!item.children && (
              <li>
                <a
                  href={item.path}
                  class="group flex items-center rounded-lg p-4 text-5xl lowercase text-white hover:bg-white hover:text-primary-500 dark:text-white dark:hover:bg-gray-700"
                >
                  <span class="ms-3 flex-1 whitespace-nowrap">
                    {item.title}
                  </span>
                </a>
              </li>
            )}
          </>
        ))
      }
      <!-- this is needed if not iterating over contact us in data object when using call to action button instead -->
      <li>
        <a
          href="/contact"
          class="group flex items-center rounded-lg p-4 text-5xl lowercase text-white hover:bg-white hover:text-primary-500 dark:text-white dark:hover:bg-gray-700"
        >
          <span class="ms-3 flex-1 whitespace-nowrap">Contact Us</span>
        </a>
      </li>
    </ul>

    <hr
      class="mx-6 my-4 h-px rounded-lg border-2 border-white dark:border-gray-700"
    />
    <button
      id="theme-toggle-drawer"
      type="button"
      class="group flex w-full items-center space-y-2 rounded-lg p-4 text-5xl font-semibold lowercase text-white hover:bg-white hover:text-primary-500 dark:text-white dark:hover:bg-gray-700"
    >
      <span class="ms-3 whitespace-nowrap">Night Mode</span>
    </button>
  </div>
</div>
