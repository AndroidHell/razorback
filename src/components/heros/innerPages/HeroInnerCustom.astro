---
const { title, desc, image } = Astro.props;
---

<section class="relative -z-50 flex h-96 w-full">
  <!-- Left 1/3 with background color -->
  <div
    class="bg-secondary-500 flex w-full flex-col justify-center md:w-1/2 lg:w-1/3"
  >
    <div class="mx-auto mt-10 max-w-screen-md px-4 py-8">
      <h1
        id="section-heading"
        class="text-start text-7xl font-semibold tracking-tight text-white"
      >
        {title}
      </h1>
      <p class="mt-4 text-xl font-light text-gray-200">
        {desc}
      </p>
    </div>
  </div>

  <!-- Right 2/3 with background image -->
  <div
    class="w-0 bg-cover bg-center bg-no-repeat md:w-1/2 lg:w-2/3"
    style={`background-image: url('${image}')`}
  >
  </div>
</section>
