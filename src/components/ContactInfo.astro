---
const contactInfo = {
  phone: {
    number: "(555) 555-5555",
    copyText: "555-555-5555",
  },
  email: {
    address: "company.name@email.com",
    copyText: "company.name@email.com",
  },
  address: {
    line1: "1234 Main St.",
    line2: "Somewhere, TX 78910",
    copyText: "Address: 1234 Main St., Somewhere, TX 78910",
  },
};
---

<section class="bg-white dark:bg-gray-800">
  <div class="mx-auto h-full">
    <div
      class="grid grid-rows-3 space-y-0 md:h-72 md:grid-cols-3 md:grid-rows-1 md:space-y-0 lg:h-full lg:grid-cols-1 lg:grid-rows-3"
    >
      <!--phone -->
      <div
        class="flex cursor-pointer flex-col items-center justify-start border-8 border-tertiary-500 bg-tertiary-500 hover:border-tertiary-600 hover:bg-tertiary-600 dark:border-tertiary-700 dark:bg-gray-800"
        onclick={`copyToClipboard('${contactInfo.phone.copyText}')`}
        aria-label="click for phone number"
      >
        <p
          class="h-32 w-full content-center bg-tertiary-100 text-center text-xl font-bold text-tertiary-500 hover:text-tertiary-600 dark:bg-gray-800 dark:text-gray-200 md:h-full lg:text-4xl"
        >
          {contactInfo.phone.number}
        </p>
        <h3
          class="w-full py-4 text-center text-4xl font-bold text-white dark:bg-tertiary-700 dark:text-white"
        >
          Call Us
        </h3>
      </div>

      <!--email -->

      <div
        class="flex cursor-pointer flex-col items-center justify-start border-8 border-primary-500 bg-primary-500 hover:border-primary-600 hover:bg-primary-600 dark:border-primary-700 dark:bg-gray-800"
        onclick={`copyToClipboard('${contactInfo.email.copyText}')`}
        aria-label="click for phone number"
      >
        <p
          class="h-full w-full content-center bg-primary-100 text-center text-lg font-bold text-primary-500 hover:text-primary-600 dark:bg-gray-800 dark:text-gray-200 lg:text-4xl"
        >
          {contactInfo.email.address}
        </p>
        <h3
          class="w-full py-4 text-center text-4xl font-bold text-white dark:bg-primary-700 dark:text-white"
        >
          Write Us
        </h3>
      </div>

      <!--address -->
      <div
        class="flex cursor-pointer flex-col items-center justify-start border-8 border-accent-500 bg-accent-500 hover:border-accent-600 hover:bg-accent-600 dark:border-accent-700 dark:bg-gray-800"
        onclick={`copyToClipboard('${contactInfo.email.copyText}')`}
        aria-label="click for phone number"
      >
        <div
          class="h-32 w-full content-center bg-accent-100 text-center text-xl font-bold text-accent-500 hover:text-accent-600 dark:bg-gray-800 dark:text-gray-200 md:h-full lg:text-4xl"
        >
          <p class="text-center">
            {contactInfo.address.line1}
          </p>
          <p class="text-center">
            {contactInfo.address.line2}
          </p>
        </div>
        <h3
          class="w-full py-4 text-center text-4xl font-bold text-white dark:bg-accent-700 dark:text-white"
        >
          Find Us
        </h3>
      </div>
    </div>
  </div>

  <!-- <h3 class="mb-2 text-xl font-bold dark:text-white">Or stop by</h3>
<p class="text-gray-500 dark:text-gray-400">
  {contactInfo.address.line1}
</p>
<p class="text-gray-500 dark:text-gray-400">
  {contactInfo.address.line2}
</p> -->

  <script is:inline>
    function copyToClipboard(text) {
      navigator.clipboard.writeText(text).then(
        () => {
          alert(text + " copied to clipboard!");
        },
        (err) => {
          alert("Failed to copy text: ", err);
        },
      );
    }
  </script>
</section>
